{
    "name": "husky_extension",
    "version": "1.0.0",
    "repository": "https://github.com/xiyuzhai/husky",
    "author": "Xiyu Zhai",
    "license": "MIT",
    "dependencies": {
        "node": "^17.1.0",
        "vscode-languageclient": "8.0.0-next.2"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.0.0",
        "@rollup/plugin-typescript": "^8.3.0",
        "@tsconfig/svelte": "^3.0.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^8.2.3",
        "@types/node": "~14.17.5",
        "@types/node-fetch": "^2.5.11",
        "@types/vscode": "^1.57.0",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "concurrently": "^6.5.1",
        "esbuild": "^0.12.19",
        "eslint": "^7.30.0",
        "glob": "^7.1.6",
        "mocha": "^9.0.2",
        "rollup": "^2.3.4",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "svelte": "^3.0.0",
        "svelte-check": "^2.2.11",
        "svelte-preprocess": "^4.10.1",
        "tslib": "^2.3.0",
        "typescript": "^4.3.5",
        "typescript-formatter": "^7.2.2",
        "vsce": "^1.95.1",
        "vscode-test": "^1.5.1"
    },
    "scripts": {
        "build-base": "esbuild ./src/main.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node --target=node14",
        "build": "npm run build-base -- --sourcemap",
        "watch": "concurrently \"rollup -c -w\" \"npm run build-base -- --sourcemap --watch\""
    },
    "main": "./out/main",
    "activationEvents": [
        "onLanguage:husky",
        "onCommand:husky_lang_server.sayHello",
        "onCommand:husky_lang_server.refresh"
    ],
    "contributes": {
        "commands": [
            {
                "command": "husky_lang_server.sayHello",
                "title": "Say Hello",
                "category": "Husky Language Server"
            },
            {
                "command": "husky_lang_server.refresh",
                "title": "Refresh",
                "category": "Husky Language Server"
            }
        ],
        "languages": [
            {
                "id": "husky",
                "aliases": [
                    "husky",
                    "husky"
                ],
                "extensions": [
                    ".hsk"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "husky",
                "scopeName": "source.husky",
                "path": "./syntaxes/husky.tmLanguage.json"
            }
        ]
    },
    "engines": {
        "vscode": "^1.57.0"
    }
}
