use crate::geom2d::*
use crate::raw_contour::RawContour

struct LineSegmentInterval:
    start: i32
    end: i32

struct LineSegment:
    start: Point2d
    end: Point2d
    interval: LineSegmentInterval

struct LineSegmentSketch:
    line_segments: []LineSegment

func get_displacement(ct: RawContour, start: i32, end: i32) -> Vector2d:
    N = ct.points.ilen()
    ct_start = ct[start%N]
    ct_end = ct[end%N]
    ct_start.to(ct_end)