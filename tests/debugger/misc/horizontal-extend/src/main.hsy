task:
    ml::datasets::cv::mnist::new_binary_dataset()

use cv::datasets::mnist::MnistLabel

proc horizontal_extend(a: r32, x: r32) -> r32:
    let mut y = a & (x | (x << 1) | (x >> 1))
    let mut z = a & (y | (y << 1) | (y >> 1))
    while z != y:
        y = z
        z = a & (y | (y << 1) | (y >> 1))
    return y

main:
    assert horizontal_extend(0b32, 0b32) == 0b32
    assert horizontal_extend(3b32, 1b32) == 3b32
    assert horizontal_extend(255b32, 1b32) == 255b32
    MnistLabel::One
