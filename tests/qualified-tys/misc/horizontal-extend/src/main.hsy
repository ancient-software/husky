task:
    ml::datasets::cv::mnist::new_binary_dataset()


proc horizontal_extend(a: r32, x: r32) -> r32:
    let y = a & (x | (x << 1) | (x >> 1))
    let mut z = a & (y | (y << 1) | (y >> 1))
    while z != y:
        y = z
        z = a & (y | (y << 1) | (y >> 1))
    return y

main:
    assert horizontal_extend(0r32, 0r32) == 0r32
    assert horizontal_extend(3r32, 1r32) == 3r32
    assert horizontal_extend(255r32, 1r32) == 255r32