proc horizontal_extend(a: r32, x: r32) -> r32:
    let y = a & (x | (x << 1) | (x >> 1))
    let mut z = a & (y | (y << 1) | (y >> 1))
    while z != y:
        y = z
        z = a & (y | (y << 1) | (y >> 1))
    return y

proc find_connected_components(img: BinaryImage28) -> []BinaryImage28:
    let mut result = []BinaryImage28()
    let mut unsearched = img.clone()
    for j < 30:
        while unsearched[j]:
            let a = unsearched[j]
            let shift = a.ctz()
            let mut mask = BinaryImage28()
            mask[j] = horizontal_extend(a, 1b32 << shift)
            let mut flag = false
            for j <= k < 30:
                unsearched[k] &= (~mask[k])
            result.push(mask)
    return result


